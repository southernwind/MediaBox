<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:sc="clr-namespace:SandBeige.MediaBox.StyleChecker.Controls;assembly=MediaBox.StyleChecker.Controls">

	<Style TargetType="sc:StyleViewer">
		<Setter Property="Margin" Value="5" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="sc:StyleViewer">
					<Border
						Margin="5,0"
						Padding="5,5,10,10"
						Background="Transparent"
						BorderBrush="{DynamicResource StyleCheckerBorderBrush}"
						BorderThickness="1">
						<StackPanel x:Name="GroupBoxRoot">
							<Border
								Margin="0,3,0,10"
								BorderBrush="{DynamicResource StyleCheckerBorderBrush}"
								BorderThickness="0,0,0,1">
								<ContentPresenter
									x:Name="PART_Header"
									HorizontalAlignment="Center"
									VerticalAlignment="Bottom"
									ContentSource="Header" />
							</Border>
							<ContentPresenter />
						</StackPanel>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>