<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:system="clr-namespace:System;assembly=mscorlib">

	<Thickness x:Key="GroupBoxHeaderThemePadding">8</Thickness>
	<system:Double x:Key="GroupBoxHeaderThemeFontSize">12</system:Double>
	<system:Double x:Key="SmallNumericValueTextBoxWidth">50</system:Double>
	<system:Double x:Key="LongTextBoxWidth">300</system:Double>
	<Style BasedOn="{StaticResource {x:Type GroupBox}}" TargetType="{x:Type GroupBox}">
		<Setter Property="Padding" Value="15,0" />
	</Style>
	<Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="{x:Type TextBox}">
		<Setter Property="HorizontalAlignment" Value="Left" />
	</Style>
</ResourceDictionary>