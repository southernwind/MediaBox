<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
	xmlns:mControls="clr-namespace:SandBeige.MediaBox.Views.Resources.Controls"
	xmlns:System="clr-namespace:System;assembly=mscorlib">

	<Thickness x:Key="GroupBoxHeaderThemePadding">8</Thickness>
	<System:Double x:Key="GroupBoxHeaderThemeFontSize">12</System:Double>
	<System:Double x:Key="SmallNumericValueTextBoxWidth">50</System:Double>
	<System:Double x:Key="LongTextBoxWidth">300</System:Double>
	<Style TargetType="{x:Type GroupBox}" BasedOn="{StaticResource {x:Type GroupBox}}">
		<Setter Property="Padding" Value="15,0"/>
	</Style>
	<Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
		<Setter Property="HorizontalAlignment" Value="Left"/>
	</Style>

	<Style TargetType="{x:Type mControls:HeaderedField}" BasedOn="{StaticResource {x:Type mControls:HeaderedField}}">
		<Setter Property="Margin" Value="3"/>
	</Style>

</ResourceDictionary>