<UserControl
	x:Class="SandBeige.MediaBox.Views.Settings.Pages.ViewerSettings"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:SandBeige.MediaBox.Controls.Controls;assembly=MediaBox.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
	xmlns:local="clr-namespace:SandBeige.MediaBox.Views.Settings.Pages"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:objects="clr-namespace:SandBeige.MediaBox.Composition.Objects;assembly=MediaBox.Composition"
	xmlns:vm="clr-namespace:SandBeige.MediaBox.ViewModels.Settings.Pages"
	d:DataContext="{d:DesignInstance vm:ViewerSettingsViewModel}"
	d:DesignHeight="450"
	d:DesignWidth="500"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" MinHeight="150" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TextBox
			Grid.Row="0"
			Margin="5"
			HorizontalAlignment="Stretch"
			AcceptsReturn="True"
			Text="{Binding MediaFileViewerControlXaml.Value}" />
		<Button
			Grid.Row="2"
			Command="{Binding ApplyCommand}"
			Content="適用" />
	</Grid>
</UserControl>
