<maControls:MetroWindow x:Class="SandBeige.MediaBox.Views.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
		xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
		xmlns:l="http://schemas.livet-mvvm.net/2011/wpf"
		xmlns:v="clr-namespace:SandBeige.MediaBox.Views"
		xmlns:vm="clr-namespace:SandBeige.MediaBox.ViewModels"
		xmlns:albumVm="clr-namespace:SandBeige.MediaBox.ViewModels.Album"
		xmlns:mediaV="clr-namespace:SandBeige.MediaBox.Views.Media"
		xmlns:album="clr-namespace:SandBeige.MediaBox.Views.Album"
		xmlns:maControls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
		Style="{DynamicResource VSWindowStyleKey}"
		Title="MainWindow"
		Height="{Binding States.SizeStates.MainWindowHeight.Value,Mode=TwoWay}"
		Width="{Binding States.SizeStates.MainWindowWidth.Value,Mode=TwoWay}"
		Left="{Binding States.SizeStates.MainWindowLeft.Value,Mode=TwoWay}"
		Top="{Binding States.SizeStates.MainWindowTop.Value,Mode=TwoWay}"
		WindowState="{Binding States.SizeStates.MainWindowState.Value,Mode=TwoWay}"
		mc:Ignorable="d"
		d:DataContext="{d:DesignInstance vm:MainWindowViewModel}">
	<i:Interaction.Triggers>
		<l:InteractionMessageTrigger Messenger="{Binding Messenger}">
			<l:TransitionInteractionMessageAction/>
		</l:InteractionMessageTrigger>
		<i:EventTrigger EventName="Closed">
			<l:DataContextDisposeAction/>
		</i:EventTrigger>
	</i:Interaction.Triggers>

	<DockPanel>
		<v:NavigationMenu DockPanel.Dock="Top" DataContext="{Binding NavigationMenuViewModel}"/>
		<StatusBar Background="{DynamicResource WindowGlowBrush}" DockPanel.Dock="Bottom" Height="20">
		</StatusBar>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="300*" MinWidth="200"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="1500*"/>
			</Grid.ColumnDefinitions>
			<album:AlbumPanel Grid.Column="0" DataContext="{Binding AlbumSelectorViewModel}"/>
			<GridSplitter Grid.Column="1"/>
			<mediaV:MediaView Grid.Column="2" DataContext="{Binding AlbumSelectorViewModel.CurrentAlbum.Value}"/>
		</Grid>
	</DockPanel>
</maControls:MetroWindow>
