<Image x:Class="SandBeige.MediaBox.Views.Media.Thumbnail"
		 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		 xmlns:local="clr-namespace:SandBeige.MediaBox.Views.Media"
		 xmlns:m="clr-namespace:SandBeige.MediaBox.Models.Media"
		 xmlns:controls="clr-namespace:SandBeige.MediaBox.Controls.Controls;assembly=MediaBox.Controls"
		 mc:Ignorable="d" 
		 d:DesignHeight="450" d:DesignWidth="800"
		 d:DataContext="{d:DesignInstance m:Thumbnail}">
	<Image.Source>
		<MultiBinding Converter="{StaticResource ApplyOrientationConverter}">
			<Binding Path="Source"/>
			<Binding Path="Orientation"/>
		</MultiBinding>
	</Image.Source>
</Image>
