<UserControl
	x:Class="SandBeige.MediaBox.Views.Album.Filter.Pages.TagFilter"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:creatorsVm="clr-namespace:SandBeige.MediaBox.ViewModels.Album.Filter.Creators"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DataContext="{d:DesignInstance creatorsVm:TagFilterCreatorViewModel}"
	d:DesignHeight="50"
	d:DesignWidth="200"
	mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<TextBox
			Name="TagName"
			Grid.Column="0"
			Width="200" />
		<Button
			Grid.Column="1"
			Command="{Binding AddTagFilterCommand}"
			CommandParameter="{Binding Text, ElementName=TagName}"
			Content="追加" />
	</Grid>
</UserControl>
