<UserControl
	x:Class="SandBeige.MediaBox.Views.Album.Filter.FilterSelector"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:SandBeige.MediaBox.Views.Album.Filter"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="clr-namespace:SandBeige.MediaBox.ViewModels.Album.Filter"
	d:DataContext="{d:DesignInstance vm:FilterDescriptionManagerViewModel}"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<ListBox
		Grid.Column="0"
		ItemsSource="{Binding FilteringConditions}"
		SelectedItem="{Binding CurrentCondition.Value}">
		<ItemsControl.ItemTemplate>
			<DataTemplate>
				<TextBlock Text="{Binding DisplayName.Value}" />
			</DataTemplate>
		</ItemsControl.ItemTemplate>
	</ListBox>
</UserControl>
