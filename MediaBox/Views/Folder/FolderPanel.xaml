<UserControl x:Class="SandBeige.MediaBox.Views.Folder.FolderPanel"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:SandBeige.MediaBox.Views.Folder"
			 xmlns:controls="clr-namespace:SandBeige.MediaBox.Controls.Controls;assembly=MediaBox.Controls"
			 xmlns:vm="clr-namespace:SandBeige.MediaBox.ViewModels.Album"
			 mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="800"
			 d:DataContext="{d:DesignInstance vm:AlbumContainerViewModel}">
	<StackPanel>
		<Button Content="SET" Command="{Binding SetTemporaryAlbumToCurrent}"/>
		<controls:FolderTreeView Name="FolderTree" SelectedFolderPath="{Binding TemporaryAlbumPath.Value}"/>
	</StackPanel>
</UserControl>
