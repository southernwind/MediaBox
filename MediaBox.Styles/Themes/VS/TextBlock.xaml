<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:system="clr-namespace:System;assembly=mscorlib">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="Definition\Colors.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<Style x:Key="StandardTextBlock" TargetType="{x:Type TextBlock}">
		<Setter Property="Foreground" Value="{DynamicResource Brush.Common.Foreground.Normal}" />
	</Style>
	<Style
		x:Key="InlineTextBlock"
		BasedOn="{StaticResource StandardTextBlock}"
		TargetType="{x:Type TextBlock}">
		<Setter Property="Margin" Value="5,0" />
		<Setter Property="VerticalAlignment" Value="Center" />
	</Style>
</ResourceDictionary>